@page
@model AskAMech.Areas.Identity.Pages.Account.Manage.ListUserQuestionsModel
@{
    IEnumerable<Question> questions = ViewData["Questions"] as IEnumerable<Question>;
}

@{
    ViewData["Title"] = "List User Questions";
    ViewData["ActivePage"] = ManageNavPages.ListUserQuestions;
}


<div class="container bootstrap snippet">
    <div class="row col-lg-9">
            <ul class="nav nav-tabs" id="myTab">
                <li class="active"><a href="#home" data-toggle="tab">Home</a></li>
                <li><a href="#messages" data-toggle="tab">Messages</a></li>
                <li><a href="#settings" data-toggle="tab">Settings</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>DateCreated</th>
                                    <th>LastModified</th>
                                </tr>
                            </thead>
                            @foreach (Question teacher in questions)
                            {
                                <tbody id="items">
                                    <tr>
                                        <td>@teacher.Title</td>
                                        <td>@teacher.Description</td>
                                        <td>@teacher.DateCreated</td>
                                        <td>@teacher.LastModified</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                        <hr>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4 text-center">
                                <ul class="pagination" id="myPager"></ul>
                            </div>
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
