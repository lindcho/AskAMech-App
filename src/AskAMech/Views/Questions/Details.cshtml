@model AskAMech.Domain.Models.Question

@{
    ViewData["Title"] = "Question Details";
}
@{

}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>
        <dd>
            <br />
        </dd>
    </dl>
    <table class="table table-hover">

        @foreach (var item in Model.Answers)
        {
            <div class="card w-100 bg-light">
                <div class="card-body">
                    <h5 class="card-title">@item.Author.UserName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Date.ToLongDateString()</h6>
                    <p class="card-text">@item.Description</p>
                    @if (@Model.AcceptedAnswerId.HasValue && @Model.AcceptedAnswerId.Value == item.AnswerId)
                    {
                        <a class="badge badge-success">Accepted</a>
                    }
                </div>
            </div>
        }
    </table>

    <div>

        @if (@ViewBag.canEdit)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Modify Question</a>
        }
        <div>
            <a href="@Url.Action("AnswerQuestion","Answers",new { questionId=Model.Id})">Answer Question</a><br />
            <a asp-action="List">Back to List</a>
        </div>
    </div>
</div>
