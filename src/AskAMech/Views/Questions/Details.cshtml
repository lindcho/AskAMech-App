@model AskAMech.Domain.Models.Question

@{
    ViewData["Title"] = "Question Details";
}
@{

}


<h1>Question Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>

        <dd>
            <br />
            <br />
        </dd>

        <dd>
            <table class="table table-hover">

                @ViewBag.answerCount @Html.DisplayNameFor(model => model.Answers)

                @foreach (var item in Model.Answers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                            @Html.DisplayFor(modelItem => item.Date)
                            @Html.DisplayFor(modelItem => item.Author.FullName)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>

<div>

    @if (@ViewBag.canEdit)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Modify Question</a>
    }
    <div>
        <a href="@Url.Action("AnswerQuestion","Answers",new { questionId=Model.Id})">Answer Question</a><br />
        <a asp-action="List">Back to List</a>
    </div>
</div>
